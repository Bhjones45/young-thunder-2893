<h1>Movies</h1>
  <h3><%= @movie.title %></h3>
  <p>Creation Year: <%= @movie.creation_year %></p>
  <p>Genre: <%= @movie.genre %></p>
  <p>Actors: </p>
  <% @movie.actors.sorts_actors_age.each do |actor| %>
    <p><%= actor.name %></p>
  <% end %>

  <p>Average age: <%= @movie.actors.average_age_actors %></p>

  <%= form_with url: "/movies/#{@movie.id}", method: :post, local: true do |f| %>
    <%= f.label :name, 'Actor Name:' %>
    <%= f.text_field :name %>

    <%= f.submit 'Add Actor' %>
<% end %>
